<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="edu.gatech.seclass.gobowl.Manager">

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Main"
        android:id="@+id/buttonMain01"
        android:onClick="openMainActivity"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Add Customer"
        android:id="@+id/buttonAddCustomer"
        android:background="#f1743b"
        android:layout_below="@+id/textView"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="56dp"
        android:onClick="openAddCustomerActivity" />

    <Button
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Print Customer Card"
        android:id="@+id/buttonPrintCustomerCard"
        android:background="#6781ca"
        android:layout_below="@+id/buttonAddCustomer"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="47dp"
        android:onClick="openGetCustomerCardActivity" />


    <Button
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Edit Customer Info"
        android:id="@+id/buttonEditCustomerInfo"
        android:background="#f1743b"
        android:layout_below="@+id/buttonPrintCustomerCard"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="45dp"
        android:onClick="openEditCustomerCardActivity" />


    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="        MANAGER  "
        android:id="@+id/textView"
        android:layout_below="@+id/buttonMain01"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="43dp"
        android:textSize="40dp" />
</RelativeLayout>
